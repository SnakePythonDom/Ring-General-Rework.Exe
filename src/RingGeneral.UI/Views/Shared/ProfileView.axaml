<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RingGeneral.UI.ViewModels.Shared"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RingGeneral.UI.Views.Shared.ProfileView"
             x:DataType="vm:ProfileViewModel">

    <Design.DataContext>
        <vm:ProfileViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <Border Background="#1e293b" Padding="24" CornerRadius="8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Border Width="96" Height="96" Background="#0f172a" CornerRadius="8">
                    <TextBlock Text="ðŸ§" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel Grid.Column="1" Spacing="6">
                    <TextBlock Text="{Binding DisplayName}" FontSize="26" FontWeight="Bold" Foreground="#e2e8f0"/>
                    <TextBlock Text="{Binding Role}" FontSize="14" Foreground="#94a3b8"/>
                    <TextBlock Text="{Binding Gimmick}" FontSize="12" Foreground="#cbd5e1"/>
                    <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#34d399"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Spacing="4" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding Nationality}" FontSize="12" Foreground="#cbd5e1" HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding Age}" FontSize="12" Foreground="#cbd5e1" HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding Height}" FontSize="12" Foreground="#cbd5e1" HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding Weight}" FontSize="12" Foreground="#cbd5e1" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <TabControl Grid.Row="1">
            <TabItem Header="PROFIL">
                <StackPanel Spacing="16" Margin="0,10,0,0">
                    <Border Background="#1e293b" Padding="20" CornerRadius="8">
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto">
                            <TextBlock Text="NationalitÃ©" FontSize="12" Foreground="#94a3b8"/>
                            <TextBlock Grid.Column="1" Text="{Binding Nationality}" FontSize="12" Foreground="#e2e8f0"/>
                            <TextBlock Grid.Row="1" Text="Ã‚ge" FontSize="12" Foreground="#94a3b8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Age}" FontSize="12" Foreground="#e2e8f0"/>
                            <TextBlock Grid.Row="2" Text="Taille" FontSize="12" Foreground="#94a3b8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Height}" FontSize="12" Foreground="#e2e8f0"/>
                            <TextBlock Grid.Row="3" Text="Poids" FontSize="12" Foreground="#94a3b8"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Weight}" FontSize="12" Foreground="#e2e8f0"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </TabItem>

            <TabItem Header="ATTRIBUTS">
                <ScrollViewer>
                    <StackPanel Spacing="16" Margin="0,10,0,0">
                        <ItemsControl ItemsSource="{Binding AttributeGroups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1e293b" Padding="20" CornerRadius="8" Margin="0,0,0,12">
                                        <StackPanel Spacing="12">
                                            <TextBlock Text="{Binding Title}" FontSize="12" Foreground="#94a3b8" FontWeight="SemiBold"/>
                                            <ItemsControl ItemsSource="{Binding Attributes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Spacing="4">
                                                            <Grid ColumnDefinitions="*,Auto">
                                                                <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="11" Foreground="#cbd5e1"/>
                                                                <TextBlock Grid.Column="1" Text="{Binding Value}" FontSize="11" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                                                            </Grid>
                                                            <Border Height="6" Background="#0f172a" CornerRadius="3">
                                                                <Border Width="{Binding PercentageWidth}" Background="{Binding Color}" CornerRadius="3" HorizontalAlignment="Left"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="HISTORIQUE">
                <StackPanel Spacing="16" Margin="0,10,0,0">
                    <Border Background="#1e293b" Padding="20" CornerRadius="8">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Matches rÃ©cents" FontSize="12" Foreground="#94a3b8" FontWeight="SemiBold"/>
                            <ItemsControl ItemsSource="{Binding RecentMatches}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding .}" FontSize="11" Foreground="#cbd5e1"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                    <Border Background="#1e293b" Padding="20" CornerRadius="8">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Storylines" FontSize="12" Foreground="#94a3b8" FontWeight="SemiBold"/>
                            <ItemsControl ItemsSource="{Binding RecentStorylines}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding .}" FontSize="11" Foreground="#cbd5e1"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                    <Border Background="#1e293b" Padding="20" CornerRadius="8">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Titres dÃ©tenus" FontSize="12" Foreground="#94a3b8" FontWeight="SemiBold"/>
                            <ItemsControl ItemsSource="{Binding TitleHistory}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding .}" FontSize="11" Foreground="#cbd5e1"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>

            <TabItem Header="CONTRAT">
                <StackPanel Spacing="16" Margin="0,10,0,0">
                    <Border Background="#1e293b" Padding="20" CornerRadius="8">
                        <StackPanel Spacing="12">
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                                <TextBlock Text="Salaire" FontSize="12" Foreground="#94a3b8"/>
                                <TextBlock Grid.Column="1" Text="{Binding Salary}" FontSize="12" Foreground="#e2e8f0"/>
                                <TextBlock Grid.Row="1" Text="DÃ©but" FontSize="12" Foreground="#94a3b8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ContractStart}" FontSize="12" Foreground="#e2e8f0"/>
                                <TextBlock Grid.Row="2" Text="Fin" FontSize="12" Foreground="#94a3b8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ContractEnd}" FontSize="12" Foreground="#e2e8f0"/>
                            </Grid>
                            <TextBlock Text="{Binding ContractClauses}" FontSize="11" Foreground="#94a3b8"/>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Button Content="RenÃ©gocier" IsEnabled="{Binding CanRenegotiate}" Background="#3b82f6" Foreground="White" CornerRadius="6" Padding="12,6"/>
                                <Button Content="LibÃ©rer" IsEnabled="{Binding CanRelease}" Background="#ef4444" Foreground="White" CornerRadius="6" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
