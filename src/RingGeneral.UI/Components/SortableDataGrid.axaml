<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="RingGeneral.UI.Components.SortableDataGrid">

  <UserControl.Styles>
    <Style Selector="Border.grid-container">
      <Setter Property="Background" Value="#1e1e1e"/>
      <Setter Property="BorderBrush" Value="#3a3a3a"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="6"/>
    </Style>

    <Style Selector="Border.toolbar">
      <Setter Property="Background" Value="#2d2d2d"/>
      <Setter Property="Padding" Value="12"/>
      <Setter Property="BorderBrush" Value="#3a3a3a"/>
      <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style Selector="TextBox.search-box">
      <Setter Property="Background" Value="#1a1a1a"/>
      <Setter Property="Foreground" Value="#e0e0e0"/>
      <Setter Property="BorderBrush" Value="#3a3a3a"/>
      <Setter Property="Padding" Value="8,6"/>
      <Setter Property="MinWidth" Value="250"/>
    </Style>

    <Style Selector="TextBox.search-box:focus">
      <Setter Property="BorderBrush" Value="#3b82f6"/>
    </Style>

    <Style Selector="Button.toolbar-button">
      <Setter Property="Background" Value="#3a3a3a"/>
      <Setter Property="Foreground" Value="#e0e0e0"/>
      <Setter Property="Padding" Value="12,6"/>
      <Setter Property="Margin" Value="4,0"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="Button.toolbar-button:pointerover">
      <Setter Property="Background" Value="#4a4a4a"/>
    </Style>

    <Style Selector="Button.toolbar-button:pressed">
      <Setter Property="Background" Value="#2a2a2a"/>
    </Style>

    <Style Selector="Button.primary-button">
      <Setter Property="Background" Value="#3b82f6"/>
      <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="Button.primary-button:pointerover">
      <Setter Property="Background" Value="#4a91ff"/>
    </Style>

    <Style Selector="DataGrid">
      <Setter Property="Background" Value="#1e1e1e"/>
      <Setter Property="RowBackground" Value="#1e1e1e"/>
      <Setter Property="GridLinesVisibility" Value="Horizontal"/>
      <Setter Property="HorizontalGridLinesBrush" Value="#3a3a3a"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="CanUserReorderColumns" Value="True"/>
      <Setter Property="CanUserResizeColumns" Value="True"/>
      <Setter Property="CanUserSortColumns" Value="True"/>
      <Setter Property="IsReadOnly" Value="True"/>
      <Setter Property="SelectionMode" Value="Extended"/>
    </Style>

    <!-- Alternating row colors via DataGridRow selector -->
    <Style Selector="DataGrid DataGridRow:nth-child(2n)">
      <Setter Property="Background" Value="#252525"/>
    </Style>

    <Style Selector="DataGridColumnHeader">
      <Setter Property="Background" Value="#2d2d2d"/>
      <Setter Property="Foreground" Value="#e0e0e0"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Padding" Value="12,8"/>
      <Setter Property="BorderBrush" Value="#3a3a3a"/>
      <Setter Property="BorderThickness" Value="0,0,1,1"/>
    </Style>

    <Style Selector="DataGridColumnHeader:pointerover">
      <Setter Property="Background" Value="#3a3a3a"/>
    </Style>

    <Style Selector="DataGridRow">
      <Setter Property="Foreground" Value="#e0e0e0"/>
    </Style>

    <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
      <Setter Property="Fill" Value="#2d2d2d"/>
    </Style>

    <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
      <Setter Property="Fill" Value="#3b82f6"/>
      <Setter Property="Opacity" Value="0.3"/>
    </Style>

    <Style Selector="DataGridCell">
      <Setter Property="Padding" Value="12,8"/>
      <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="TextBlock.status-text">
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="Foreground" Value="#888888"/>
      <Setter Property="Margin" Value="0,0,12,0"/>
    </Style>

    <Style Selector="Border.pagination">
      <Setter Property="Background" Value="#2d2d2d"/>
      <Setter Property="Padding" Value="12"/>
      <Setter Property="BorderBrush" Value="#3a3a3a"/>
      <Setter Property="BorderThickness" Value="0,1,0,0"/>
    </Style>
  </UserControl.Styles>

  <Border Classes="grid-container">
    <DockPanel>
      <!-- Toolbar -->
      <Border DockPanel.Dock="Top" Classes="toolbar">
        <Grid ColumnDefinitions="Auto,*,Auto">
          <!-- Search -->
          <TextBox Grid.Column="0"
                   Classes="search-box"
                   Text="{Binding SearchText}"
                   Watermark="ðŸ” Rechercher..."
                   VerticalAlignment="Center"/>

          <!-- Actions -->
          <StackPanel Grid.Column="2"
                      Orientation="Horizontal"
                      Spacing="8">
            <Button Classes="toolbar-button"
                    Content="ðŸ”½ Filtres"
                    Command="{Binding ToggleFiltersCommand}"
                    IsVisible="{Binding CanFilter}"/>
            <Button Classes="toolbar-button"
                    Content="ðŸ“Š Export CSV"
                    Command="{Binding ExportCsvCommand}"
                    IsVisible="{Binding CanExport}"/>
            <Button Classes="toolbar-button primary-button"
                    Content="{Binding PrimaryActionText}"
                    Command="{Binding PrimaryActionCommand}"
                    IsVisible="{Binding HasPrimaryAction}"/>
          </StackPanel>
        </Grid>
      </Border>

      <!-- Filter Panel (Collapsible) -->
      <Border DockPanel.Dock="Top"
              Background="#252525"
              Padding="12"
              BorderBrush="#3a3a3a"
              BorderThickness="0,0,0,1"
              IsVisible="{Binding FiltersVisible}">
        <ContentControl Content="{Binding FilterContent}"/>
      </Border>

      <!-- Status Bar -->
      <Border DockPanel.Dock="Bottom" Classes="pagination">
        <Grid ColumnDefinitions="Auto,*,Auto">
          <!-- Item Count -->
          <TextBlock Grid.Column="0"
                     Classes="status-text"
                     Text="{Binding StatusText}"/>

          <!-- Pagination -->
          <StackPanel Grid.Column="2"
                      Orientation="Horizontal"
                      Spacing="8"
                      IsVisible="{Binding HasPagination}">
            <Button Classes="toolbar-button"
                    Content="â—€"
                    Command="{Binding PreviousPageCommand}"
                    IsEnabled="{Binding CanGoPrevious}"/>
            <TextBlock Classes="status-text"
                       Text="{Binding PaginationText}"
                       VerticalAlignment="Center"/>
            <Button Classes="toolbar-button"
                    Content="â–¶"
                    Command="{Binding NextPageCommand}"
                    IsEnabled="{Binding CanGoNext}"/>
          </StackPanel>
        </Grid>
      </Border>

      <!-- DataGrid -->
      <DataGrid ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                AutoGenerateColumns="False">
        <!-- Columns will be defined in DataTemplates -->
        <DataGrid.Columns>
          <!-- Dynamic columns will be added via binding -->
        </DataGrid.Columns>
      </DataGrid>
    </DockPanel>
  </Border>
</UserControl>
