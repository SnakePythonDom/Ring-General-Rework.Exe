<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RingGeneral.UI.ViewModels.Settings"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RingGeneral.UI.Views.Settings.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="30" Spacing="25" MaxWidth="900" HorizontalAlignment="Center">
            <!-- En-tÃªte -->
            <StackPanel Spacing="8">
                <TextBlock Text="âš™ï¸ PARAMÃˆTRES" FontSize="28" FontWeight="Bold" Foreground="#e0e0e0"/>
                <TextBlock Text="Configurez vos prÃ©fÃ©rences de jeu" FontSize="14" Foreground="#888888"/>
            </StackPanel>

            <!-- SECTION: Sauvegarde -->
            <Border Background="#1e293b" Padding="25" CornerRadius="8">
                <StackPanel Spacing="20">
                    <TextBlock Text="ðŸ’¾ SAUVEGARDE" FontSize="16" Foreground="#64748b" FontWeight="Bold"/>

                    <!-- Auto-sauvegarde -->
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Sauvegarde automatique" FontSize="14" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                            <TextBlock Text="Sauvegarder automatiquement la progression" FontSize="12" Foreground="#888888"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding AutoSave}" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Intervalle de sauvegarde -->
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Intervalle de sauvegarde" FontSize="14" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                            <TextBlock Text="FrÃ©quence de sauvegarde automatique (en minutes)" FontSize="12" Foreground="#888888"/>
                        </StackPanel>
                        <NumericUpDown Grid.Column="1"
                                     Value="{Binding AutoSaveInterval}"
                                     Minimum="1"
                                     Maximum="60"
                                     Width="100"
                                     Background="#0f172a"
                                     BorderBrush="#334155"
                                     Foreground="#e0e0e0"
                                     VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- SECTION: Notifications -->
            <Border Background="#1e293b" Padding="25" CornerRadius="8">
                <StackPanel Spacing="20">
                    <TextBlock Text="ðŸ”” NOTIFICATIONS" FontSize="16" Foreground="#64748b" FontWeight="Bold"/>

                    <!-- Afficher notifications -->
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Afficher les notifications" FontSize="14" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                            <TextBlock Text="Recevoir des alertes pour les Ã©vÃ©nements importants" FontSize="12" Foreground="#888888"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding ShowNotifications}" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Confirmer actions -->
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Confirmer les actions" FontSize="14" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                            <TextBlock Text="Demander confirmation pour les actions importantes" FontSize="12" Foreground="#888888"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding ConfirmActions}" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- SECTION: Audio -->
            <Border Background="#1e293b" Padding="25" CornerRadius="8">
                <StackPanel Spacing="20">
                    <TextBlock Text="ðŸ”Š AUDIO" FontSize="16" Foreground="#64748b" FontWeight="Bold"/>

                    <!-- Activer le son -->
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Activer le son" FontSize="14" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                            <TextBlock Text="Activer les effets sonores et la musique" FontSize="12" Foreground="#888888"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding EnableSound}" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Volume sonore -->
                    <StackPanel Spacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="Volume sonore" FontSize="14" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding SoundVolume, StringFormat={}{0}%}" FontSize="14" Foreground="#3b82f6" FontWeight="Bold"/>
                        </Grid>
                        <Slider Value="{Binding SoundVolume}"
                              Minimum="0"
                              Maximum="100"
                              IsEnabled="{Binding EnableSound}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- SECTION: Interface -->
            <Border Background="#1e293b" Padding="25" CornerRadius="8">
                <StackPanel Spacing="20">
                    <TextBlock Text="ðŸŽ¨ INTERFACE" FontSize="16" Foreground="#64748b" FontWeight="Bold"/>

                    <!-- Langue -->
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Langue" FontSize="14" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                            <TextBlock Text="Langue de l'interface" FontSize="12" Foreground="#888888"/>
                        </StackPanel>
                        <ComboBox Grid.Column="1"
                                SelectedItem="{Binding Language}"
                                Background="#0f172a"
                                BorderBrush="#334155"
                                Foreground="#e0e0e0"
                                MinWidth="150"
                                VerticalAlignment="Center">
                            <ComboBoxItem Content="FranÃ§ais"/>
                            <ComboBoxItem Content="English"/>
                            <ComboBoxItem Content="EspaÃ±ol"/>
                            <ComboBoxItem Content="Deutsch"/>
                        </ComboBox>
                    </Grid>

                    <!-- ThÃ¨me -->
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="ThÃ¨me" FontSize="14" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                            <TextBlock Text="Apparence de l'interface" FontSize="12" Foreground="#888888"/>
                        </StackPanel>
                        <ComboBox Grid.Column="1"
                                SelectedItem="{Binding Theme}"
                                Background="#0f172a"
                                BorderBrush="#334155"
                                Foreground="#e0e0e0"
                                MinWidth="150"
                                VerticalAlignment="Center">
                            <ComboBoxItem Content="Sombre"/>
                            <ComboBoxItem Content="Clair"/>
                            <ComboBoxItem Content="Automatique"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- SECTION: Ã€ propos -->
            <Border Background="#1e293b" Padding="25" CornerRadius="8">
                <StackPanel Spacing="15">
                    <TextBlock Text="â„¹ï¸ Ã€ PROPOS" FontSize="16" Foreground="#64748b" FontWeight="Bold"/>

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" FontSize="13" Foreground="#888888" Margin="0,0,15,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="1.0.0 Beta" FontSize="13" Foreground="#e0e0e0" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Build:" FontSize="13" Foreground="#888888" Margin="0,0,15,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="2024.01.08" FontSize="13" Foreground="#e0e0e0" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Base de donnÃ©es:" FontSize="13" Foreground="#888888" Margin="0,0,15,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="ring_general.db" FontSize="13" Foreground="#e0e0e0" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Framework:" FontSize="13" Foreground="#888888" Margin="0,0,15,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Avalonia UI 11.0" FontSize="13" Foreground="#e0e0e0" FontWeight="SemiBold"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Boutons d'action -->
            <Grid ColumnDefinitions="*,*">
                <Button Grid.Column="0"
                      Content="ðŸ’¾ Sauvegarder"
                      Command="{Binding SaveSettingsCommand}"
                      Padding="0,12"
                      Background="#10b981"
                      Foreground="White"
                      CornerRadius="6"
                      FontWeight="Bold"
                      FontSize="14"
                      Margin="0,0,7,0"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"/>

                <Button Grid.Column="1"
                      Content="ðŸ”„ RÃ©initialiser"
                      Command="{Binding ResetDefaultsCommand}"
                      Padding="0,12"
                      Background="#ef4444"
                      Foreground="White"
                      CornerRadius="6"
                      FontWeight="Bold"
                      FontSize="14"
                      Margin="8,0,0,0"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"/>
            </Grid>

        </StackPanel>
    </ScrollViewer>

</UserControl>
