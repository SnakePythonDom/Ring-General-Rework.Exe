<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== COLOR PALETTE ==================== -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#1a1a1a</Color>
    <Color x:Key="BackgroundSecondary">#1e1e1e</Color>
    <Color x:Key="BackgroundTertiary">#242424</Color>
    <Color x:Key="BackgroundCard">#1e293b</Color>
    <Color x:Key="BackgroundCardDark">#0f172a</Color>
    <Color x:Key="BackgroundInput">#2d2d2d</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderDefault">#2a2a2a</Color>
    <Color x:Key="BorderLight">#3a3a3a</Color>
    <Color x:Key="BorderMedium">#334155</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#e0e0e0</Color>
    <Color x:Key="TextSecondary">#cbd5e1</Color>
    <Color x:Key="TextMuted">#94a3b8</Color>
    <Color x:Key="TextSubtle">#64748b</Color>
    <Color x:Key="TextDisabled">#666666</Color>
    <Color x:Key="TextDark">#444444</Color>

    <!-- Brand Colors -->
    <Color x:Key="BrandPrimary">#3b82f6</Color>
    <Color x:Key="BrandSecondary">#8b5cf6</Color>
    <Color x:Key="BrandAccent">#06b6d4</Color>

    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#10b981</Color>
    <Color x:Key="SuccessLight">#34d399</Color>
    <Color x:Key="SuccessDark">#065f46</Color>
    <Color x:Key="WarningColor">#f59e0b</Color>
    <Color x:Key="WarningLight">#fb923c</Color>
    <Color x:Key="WarningDark">#7c2d12</Color>
    <Color x:Key="ErrorColor">#ef4444</Color>
    <Color x:Key="ErrorLight">#fca5a5</Color>
    <Color x:Key="ErrorDark">#7f1d1d</Color>
    <Color x:Key="InfoColor">#3b82f6</Color>

    <!-- Brushes (SolidColorBrush from Colors) -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimary}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondary}"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundTertiary}"/>
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="{StaticResource BackgroundCard}"/>
    <SolidColorBrush x:Key="BackgroundCardDarkBrush" Color="{StaticResource BackgroundCardDark}"/>
    <SolidColorBrush x:Key="BackgroundInputBrush" Color="{StaticResource BackgroundInput}"/>

    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource BorderDefault}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLight}"/>
    <SolidColorBrush x:Key="BorderMediumBrush" Color="{StaticResource BorderMedium}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    <SolidColorBrush x:Key="TextSubtleBrush" Color="{StaticResource TextSubtle}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}"/>

    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimary}"/>
    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{StaticResource BrandSecondary}"/>
    <SolidColorBrush x:Key="BrandAccentBrush" Color="{StaticResource BrandAccent}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLight}"/>
    <SolidColorBrush x:Key="SuccessDarkBrush" Color="{StaticResource SuccessDark}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="ErrorDarkBrush" Color="{StaticResource ErrorDark}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <!-- ==================== TYPOGRAPHY ==================== -->

    <x:Double x:Key="FontSizeXSmall">10</x:Double>
    <x:Double x:Key="FontSizeSmall">11</x:Double>
    <x:Double x:Key="FontSizeNormal">12</x:Double>
    <x:Double x:Key="FontSizeMedium">13</x:Double>
    <x:Double x:Key="FontSizeLarge">14</x:Double>
    <x:Double x:Key="FontSizeXLarge">16</x:Double>
    <x:Double x:Key="FontSizeXXLarge">18</x:Double>
    <x:Double x:Key="FontSizeTitle">22</x:Double>
    <x:Double x:Key="FontSizeHeading">28</x:Double>
    <x:Double x:Key="FontSizeDisplay">32</x:Double>

    <FontWeight x:Key="FontWeightLight">Light</FontWeight>
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

    <!-- ==================== SPACING ==================== -->

    <Thickness x:Key="SpacingXSmall">4</Thickness>
    <Thickness x:Key="SpacingSmall">8</Thickness>
    <Thickness x:Key="SpacingMedium">12</Thickness>
    <Thickness x:Key="SpacingLarge">15</Thickness>
    <Thickness x:Key="SpacingXLarge">20</Thickness>
    <Thickness x:Key="SpacingXXLarge">25</Thickness>
    <Thickness x:Key="SpacingHuge">30</Thickness>

    <x:Double x:Key="SpacingXSmallValue">4</x:Double>
    <x:Double x:Key="SpacingSmallValue">8</x:Double>
    <x:Double x:Key="SpacingMediumValue">12</x:Double>
    <x:Double x:Key="SpacingLargeValue">15</x:Double>
    <x:Double x:Key="SpacingXLargeValue">20</x:Double>
    <x:Double x:Key="SpacingXXLargeValue">25</x:Double>
    <x:Double x:Key="SpacingHugeValue">30</x:Double>

    <!-- ==================== BORDER RADIUS ==================== -->

    <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="RadiusMedium">6</CornerRadius>
    <CornerRadius x:Key="RadiusLarge">8</CornerRadius>

    <!-- ==================== COMMON STYLES ==================== -->

    <!-- Card Style -->
    <Style x:Key="CardBorder" Selector="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingXLarge}"/>
    </Style>

    <!-- Heading Styles -->
    <Style x:Key="HeadingStyle" Selector="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeHeading}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="TitleStyle" Selector="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeTitle}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="SubtitleStyle" Selector="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
    </Style>

    <Style x:Key="LabelStyle" Selector="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSubtleBrush}"/>
    </Style>

    <!-- Button Styles -->
    <Style x:Key="PrimaryButton" Selector="Button">
        <Setter Property="Background" Value="{StaticResource BrandPrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
    </Style>

    <Style x:Key="SecondaryButton" Selector="Button">
        <Setter Property="Background" Value="{StaticResource BrandSecondaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
    </Style>

    <Style x:Key="SuccessButton" Selector="Button">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
    </Style>

    <Style x:Key="DangerButton" Selector="Button">
        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
    </Style>

    <!-- Input Styles -->
    <Style x:Key="DefaultTextBox" Selector="TextBox">
        <Setter Property="Background" Value="{StaticResource BackgroundInputBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
    </Style>

    <!-- Badge Styles -->
    <Style x:Key="BadgeSuccess" Selector="Border">
        <Setter Property="Background" Value="{StaticResource SuccessDarkBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}"/>
    </Style>

    <Style x:Key="BadgeWarning" Selector="Border">
        <Setter Property="Background" Value="{StaticResource WarningDarkBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}"/>
    </Style>

    <Style x:Key="BadgeError" Selector="Border">
        <Setter Property="Background" Value="{StaticResource ErrorDarkBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}"/>
    </Style>

    <Style x:Key="BadgeInfo" Selector="Border">
        <Setter Property="Background" Value="{StaticResource BrandPrimaryBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}"/>
    </Style>

    <!-- Stats Card Styles -->
    <Style x:Key="StatsCardSuccess" Selector="Border">
        <Setter Property="Background" Value="{StaticResource SuccessDarkBrush}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingXLarge}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
    </Style>

    <Style x:Key="StatsCardWarning" Selector="Border">
        <Setter Property="Background" Value="{StaticResource WarningDarkBrush}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingXLarge}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
    </Style>

    <Style x:Key="StatsCardInfo" Selector="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingXLarge}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
    </Style>

</ResourceDictionary>
