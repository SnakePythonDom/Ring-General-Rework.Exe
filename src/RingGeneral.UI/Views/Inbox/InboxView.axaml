<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RingGeneral.UI.ViewModels.Inbox"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RingGeneral.UI.Views.Inbox.InboxView"
             x:DataType="vm:InboxViewModel">

    <Design.DataContext>
        <vm:InboxViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <Style Selector="Border.card">
            <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BoxShadow" Value="0 8 20 #00000055"/>
        </Style>

        <Style Selector="RadioButton.inbox-tab">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="0,0,0,6"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
        </Style>

        <Style Selector="RadioButton.inbox-tab:checked">
            <Setter Property="Foreground" Value="{StaticResource BrandPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrandPrimaryBrush}"/>
        </Style>

        <Style Selector="ListBoxItem.inbox-item">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="12,8"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="ListBoxItem.inbox-item:selected Border">
            <Setter Property="Background" Value="{StaticResource BackgroundCardDarkBrush}"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundPrimaryBrush}" RowDefinitions="Auto,*" Padding="24">
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,16">
            <TextBlock Text="BOÎTE DE RÉCEPTION"
                       FontSize="24"
                       FontWeight="Black"
                       Foreground="White"
                       LetterSpacing="-0.5"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" VerticalAlignment="Bottom">
                <RadioButton Classes="inbox-tab" GroupName="InboxTabs" Content="TOUS" IsChecked="{Binding IsAllTabSelected}"/>
                <RadioButton Classes="inbox-tab" GroupName="InboxTabs" Content="CONTRATS" IsChecked="{Binding IsContractsTabSelected}"/>
                <RadioButton Classes="inbox-tab" GroupName="InboxTabs" Content="MÉDICAL" IsChecked="{Binding IsMedicalTabSelected}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,2*" ColumnSpacing="20">
            <!-- Liste Messages -->
            <Border Classes="card" Grid.Column="0">
                <ListBox ItemsSource="{Binding FilteredItems}"
                         SelectedItem="{Binding SelectedItem}"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="4,0,0,0"
                                    BorderBrush="{Binding AccentColor}"
                                    CornerRadius="8"
                                    Padding="16">
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="6">
                                    <Border Grid.Row="0"
                                            Background="{Binding BadgeBackground}"
                                            CornerRadius="4"
                                            Padding="6,2"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding BadgeLabel}"
                                                   FontSize="10"
                                                   FontWeight="Black"
                                                   Foreground="{Binding BadgeForeground}"/>
                                    </Border>
                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="1"
                                                   Text="{Binding FormattedDate}"
                                                   FontSize="10"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Row="1"
                                               Grid.ColumnSpan="2"
                                               Text="{Binding Titre}"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Row="2"
                                                   Grid.ColumnSpan="2"
                                                   Text="{Binding Message}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerTheme>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Classes" Value="inbox-item"/>
                        </Style>
                    </ListBox.ItemContainerTheme>
                </ListBox>
            </Border>

            <!-- Lecture Message -->
            <Border Grid.Column="1" Classes="card" Padding="24">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Text="DÉTAILS DU MESSAGE"
                               FontSize="18"
                               FontWeight="Black"
                               Foreground="White"
                               LetterSpacing="-0.5"
                               Margin="0,0,0,16"/>

                    <Grid Grid.Row="1">
                        <StackPanel IsVisible="{Binding SelectedItem, Converter={x:Static ObjectConverters.IsNull}}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Spacing="12">
                            <TextBlock Text="Sélectionnez un message pour le lire."
                                       FontSize="12"
                                       Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>

                        <StackPanel IsVisible="{Binding SelectedItem, Converter={x:Static ObjectConverters.IsNotNull}}" Spacing="16">
                            <StackPanel Spacing="6">
                                <TextBlock Text="{Binding SelectedItem.Titre}"
                                           FontSize="20"
                                           FontWeight="Black"
                                           Foreground="White"
                                           TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Border Background="{Binding SelectedItem.BadgeBackground}"
                                            CornerRadius="4"
                                            Padding="6,2">
                                        <TextBlock Text="{Binding SelectedItem.BadgeLabel}"
                                                   FontSize="10"
                                                   FontWeight="Black"
                                                   Foreground="{Binding SelectedItem.BadgeForeground}"/>
                                    </Border>
                                    <TextBlock Text="{Binding SelectedItem.FormattedDate}"
                                               FontSize="11"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Background="{StaticResource BackgroundCardDarkBrush}" CornerRadius="8" Padding="18">
                                <TextBlock Text="{Binding SelectedItem.Message}"
                                           FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           LineHeight="22"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
