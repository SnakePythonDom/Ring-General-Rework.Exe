<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="using:RingGeneral.UI.Components"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="RingGeneral.UI.Components.AttributeCategoryPanel">

  <UserControl.Styles>
    <Style Selector="Border.category-container">
      <Setter Property="Background" Value="#1e293b"/>
      <Setter Property="BorderBrush" Value="#334155"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="20"/>
      <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <Style Selector="TextBlock.category-title">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="Foreground" Value="#64748b"/>
      <Setter Property="Margin" Value="0,0,0,15"/>
      <Setter Property="LetterSpacing" Value="1"/>
    </Style>

    <Style Selector="TextBlock.category-icon">
      <Setter Property="FontSize" Value="16"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>
  </UserControl.Styles>

  <Border Classes="category-container">
    <StackPanel>
      <!-- Header: Category Title -->
      <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
        <TextBlock Classes="category-icon" Text="{Binding CategoryIcon}"/>
        <TextBlock Classes="category-title" Text="{Binding CategoryTitle}"/>
      </StackPanel>

      <!-- Attributes Grid (2 columns) -->
      <ItemsControl ItemsSource="{Binding Attributes}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <UniformGrid Columns="2" HorizontalAlignment="Stretch"/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Margin="0,0,8,8">
              <components:AttributeBar DataContext="{Binding}"/>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

      <!-- Empty State -->
      <StackPanel IsVisible="{Binding !HasAttributes}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Spacing="8"
                  Margin="0,20,0,0">
        <TextBlock Text="ðŸ“Š"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   Foreground="#3a3a3a"/>
        <TextBlock Text="Aucun attribut dans cette catÃ©gorie"
                   FontSize="12"
                   Foreground="#666666"
                   HorizontalAlignment="Center"/>
      </StackPanel>

      <!-- Category Description (optional) -->
      <TextBlock Text="{Binding CategoryDescription}"
                 FontSize="11"
                 Foreground="#94a3b8"
                 TextWrapping="Wrap"
                 Margin="0,15,0,0"
                 IsVisible="{Binding CategoryDescription, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
    </StackPanel>
  </Border>
</UserControl>
