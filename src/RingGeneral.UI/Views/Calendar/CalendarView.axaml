<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RingGeneral.UI.ViewModels.Calendar"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RingGeneral.UI.Views.Calendar.CalendarView"
             x:DataType="vm:CalendarViewModel">

    <Design.DataContext>
        <vm:CalendarViewModel />
    </Design.DataContext>

    <Grid x:Name="CalendarViewRoot" Margin="30" RowDefinitions="Auto,20,*,Auto">

        <!-- En-tÃªte -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="ðŸ“… CALENDRIER SHOWS" FontSize="28" FontWeight="Bold" Foreground="#e0e0e0"/>
                <TextBlock FontSize="14" Foreground="#888888" Text="{Binding CurrentDateFormatted}"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                <Button Content="â† Mois prÃ©cÃ©dent" Command="{Binding PreviousMonthCommand}" IsVisible="False"/>
                <Button Content="Mois suivant â†’" Command="{Binding NextMonthCommand}" IsVisible="False"/>
            </StackPanel>
        </Grid>

        <!-- Calendrier Mensuel -->
        <Border Grid.Row="2" Background="#1e293b" CornerRadius="8" Padding="20">
            <Grid RowDefinitions="Auto,10,*">
                <!-- En-tÃªtes jours de la semaine -->
                <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*,*,*,*">
                    <TextBlock Grid.Column="0" Text="Lundi" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Mardi" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="Mercredi" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Jeudi" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="Vendredi" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="Samedi" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="6" Text="Dimanche" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                </Grid>

                <!-- Grille calendrier (7 colonnes x ~6 lignes) -->
                <ItemsControl Grid.Row="2" ItemsSource="{Binding CalendarDays}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7" Rows="6"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#0f172a" CornerRadius="4" Padding="8" Margin="2" 
                                    BorderBrush="#334155" BorderThickness="1">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="ðŸ“º Ajouter Weekly Show" 
                                                  Command="{Binding #CalendarViewRoot.DataContext.CreateShowRapideCommand}" 
                                                  CommandParameter="{Binding Date}"/>
                                        <MenuItem Header="ðŸ† Ajouter PPV" 
                                                  Command="{Binding #CalendarViewRoot.DataContext.CreateShowRapideCommand}" 
                                                  CommandParameter="{Binding Date}"/>
                                        <MenuItem Header="ðŸ  Ajouter House Show" 
                                                  Command="{Binding #CalendarViewRoot.DataContext.CreateShowRapideCommand}" 
                                                  CommandParameter="{Binding Date}"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{Binding DayNumber}" FontSize="14" FontWeight="Bold" Foreground="#e0e0e0"/>
                                    <ItemsControl ItemsSource="{Binding Shows}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#334155" CornerRadius="3" Padding="4" Margin="0,2">
                                                    <StackPanel Spacing="2">
                                                        <TextBlock Text="{Binding ShowTypeIcon}" FontSize="12"/>
                                                        <TextBlock Text="{Binding Name}" FontSize="10" Foreground="#e0e0e0" TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- Liste des shows Ã  venir (en bas) -->
        <Border Grid.Row="3" Background="#1e293b" CornerRadius="8" Padding="20" Margin="0,20,0,0">
            <Grid RowDefinitions="Auto,15,*">
                <TextBlock Grid.Row="0" Text="SHOWS Ã€ VENIR" FontSize="16" FontWeight="SemiBold" Foreground="#e0e0e0"/>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding UpcomingShows}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#0f172a" CornerRadius="6" Padding="15" Margin="0,0,0,10">
                                    <Grid RowDefinitions="Auto,8,Auto,8,Auto">
                                        <!-- Name + Date -->
                                        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                                            <TextBlock Grid.Column="0" Text="{Binding ShowTypeIcon}" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Foreground="#e0e0e0" VerticalAlignment="Center"/>
                                            <Border Grid.Column="2" Background="#334155" CornerRadius="4" Padding="6,3">
                                                <TextBlock Text="{Binding DateDisplay}" FontSize="11" Foreground="#94a3b8" FontWeight="SemiBold"/>
                                            </Border>
                                        </Grid>

                                        <!-- Location -->
                                        <TextBlock Grid.Row="2" Text="{Binding Location}" FontSize="12" Foreground="#94a3b8"/>

                                        <!-- Broadcast + Status -->
                                        <Grid Grid.Row="4" ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="{Binding Broadcast}" FontSize="12" Foreground="#64748b" FontStyle="Italic"/>
                                            <Border Grid.Column="1" Background="{Binding StatusColor}" CornerRadius="4" Padding="8,3">
                                                <TextBlock Text="{Binding StatusDisplay}" FontSize="11" Foreground="#ffffff" FontWeight="SemiBold"/>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Contenu Principal (2 colonnes) - ANCIEN LAYOUT (masquÃ© pour l'instant) -->
        <Grid Grid.Row="2" ColumnDefinitions="2*,15,3*" IsVisible="False">

            <!-- COLONNE GAUCHE: Upcoming Shows -->
            <Border Grid.Column="0" Background="#1e293b" CornerRadius="8" Padding="20">
                <Grid RowDefinitions="Auto,15,*">
                    <TextBlock Grid.Row="0" Text="UPCOMING SHOWS" FontSize="16" FontWeight="SemiBold" Foreground="#e0e0e0"/>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding UpcomingShows}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0f172a" CornerRadius="6" Padding="15" Margin="0,0,0,10">
                                        <Grid RowDefinitions="Auto,8,Auto,8,Auto">
                                            <!-- Name + Week -->
                                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                                                <TextBlock Grid.Column="0" Text="{Binding ShowTypeIcon}" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Foreground="#e0e0e0" VerticalAlignment="Center"/>
                                                <Border Grid.Column="2" Background="#334155" CornerRadius="4" Padding="6,3">
                                                    <TextBlock Text="{Binding WeekDisplay}" FontSize="11" Foreground="#94a3b8" FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Location -->
                                            <TextBlock Grid.Row="2" Text="{Binding Location}" FontSize="12" Foreground="#94a3b8"/>

                                            <!-- Broadcast + Status -->
                                            <Grid Grid.Row="4" ColumnDefinitions="*,Auto">
                                                <TextBlock Grid.Column="0" Text="{Binding Broadcast}" FontSize="12" Foreground="#64748b" FontStyle="Italic"/>
                                                <Border Grid.Column="1" Background="{Binding StatusColor}" CornerRadius="4" Padding="8,3">
                                                    <TextBlock Text="{Binding StatusDisplay}" FontSize="11" Foreground="#ffffff" FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- COLONNE DROITE: Calendar Entries -->
            <Border Grid.Column="2" Background="#1e293b" CornerRadius="8" Padding="20">
                <Grid RowDefinitions="Auto,15,*">
                    <TextBlock Grid.Row="0" Text="CALENDAR ENTRIES" FontSize="16" FontWeight="SemiBold" Foreground="#e0e0e0"/>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CalendarEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0f172a" CornerRadius="6" Padding="15" Margin="0,0,0,10">
                                        <Grid RowDefinitions="Auto,8,Auto" ColumnDefinitions="Auto,*">
                                            <!-- Icon -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Text="{Binding TypeIcon}" FontSize="24" VerticalAlignment="Top" Margin="0,0,12,0"/>

                                            <!-- Date + Type -->
                                            <Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="*,Auto">
                                                <TextBlock Grid.Column="0" Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" Foreground="#e0e0e0"/>
                                                <Border Grid.Column="1" Background="#334155" CornerRadius="4" Padding="6,3">
                                                    <TextBlock Text="{Binding EntryType}" FontSize="11" Foreground="#94a3b8" FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Date -->
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Date}" FontSize="12" Foreground="#64748b"/>

                                            <!-- Notes -->
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Notes}" FontSize="12" Foreground="#94a3b8" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

        </Grid>

    </Grid>

</UserControl>
