<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RingGeneral.UI.ViewModels.Start"
             mc:Ignorable="d" d:DesignWidth="1600" d:DesignHeight="900"
             x:Class="RingGeneral.UI.Views.Start.StartView"
             x:DataType="vm:StartViewModel">

    <Design.DataContext>
        <vm:StartViewModel />
    </Design.DataContext>

    <Grid Background="{StaticResource BackgroundPrimaryBrush}">
        <!-- Fond avec dÃ©gradÃ© -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="{StaticResource BackgroundTertiary}" Offset="0.0"/>
                    <GradientStop Color="{StaticResource BackgroundSecondary}" Offset="0.5"/>
                    <GradientStop Color="{StaticResource BackgroundTertiary}" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Contenu principal centrÃ© -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="40">

            <!-- Logo et Titre -->
            <StackPanel Spacing="12" HorizontalAlignment="Center">
                <TextBlock Text="ðŸŽ­" FontSize="80" HorizontalAlignment="Center"/>
                <TextBlock Text="RING GENERAL"
                          FontSize="64"
                          FontWeight="Black"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          HorizontalAlignment="Center"
                          LetterSpacing="4"/>
                <TextBlock Text="Wrestling Management Simulation"
                          FontSize="16"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Center"
                          LetterSpacing="2"/>
            </StackPanel>

            <!-- Menu Buttons -->
            <StackPanel Spacing="20" Width="400">

                <!-- Nouvelle Partie -->
                <Button Command="{Binding NewGameCommand}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="0,20"
                        CornerRadius="8"
                        Background="{StaticResource AccentBlueBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="ðŸŽ®" FontSize="24"/>
                        <TextBlock Text="NOUVELLE PARTIE" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Charger Partie (dÃ©sactivÃ© si pas de sauvegarde) -->
                <Button Command="{Binding LoadGameCommand}"
                        IsEnabled="{Binding HasActiveSave}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="0,20"
                        CornerRadius="8"
                        Background="{StaticResource AccentGreenBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="ðŸ“‚" FontSize="24"/>
                        <StackPanel>
                            <TextBlock Text="CHARGER PARTIE" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding ActiveSaveName}"
                                      FontSize="12"
                                      Foreground="{StaticResource SuccessLightBrush}"
                                      IsVisible="{Binding HasActiveSave}"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- Options (dÃ©sactivÃ© pour l'instant) -->
                <Button IsEnabled="False"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="0,20"
                        CornerRadius="8"
                        Background="{StaticResource TextSubtleBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="âš™ï¸" FontSize="24"/>
                        <TextBlock Text="OPTIONS" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Quitter -->
                <Button Command="{Binding ExitCommand}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="0,20"
                        CornerRadius="8"
                        Classes="danger">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="âŒ" FontSize="24"/>
                        <TextBlock Text="QUITTER" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </StackPanel>

            <!-- Version info -->
            <TextBlock Text="v1.0.0 Alpha â€¢ Build 2026-01-07"
                      FontSize="12"
                      Foreground="{StaticResource TextDisabledBrush}"
                      HorizontalAlignment="Center"
                      Margin="0,40,0,0"/>

        </StackPanel>
    </Grid>

</UserControl>
