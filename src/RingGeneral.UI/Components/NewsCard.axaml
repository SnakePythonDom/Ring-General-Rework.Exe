<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="120"
             x:Class="RingGeneral.UI.Components.NewsCard">

  <UserControl.Styles>
    <Style Selector="Border.news-card">
      <Setter Property="Background" Value="{StaticResource BackgroundInputBrush}"/>
      <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="Margin" Value="0,0,0,8"/>
      <Setter Property="Padding" Value="12"/>
    </Style>

    <Style Selector="Border.news-card:pointerover">
      <Setter Property="Background" Value="{StaticResource BackgroundHoverBrush}"/>
      <Setter Property="BorderBrush" Value="{StaticResource BorderSecondaryBrush}"/>
    </Style>

    <Style Selector="Border.news-card.unread">
      <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
      <Setter Property="BorderThickness" Value="2,1,1,1"/>
    </Style>

    <Style Selector="Border.icon-container">
      <Setter Property="Width" Value="40"/>
      <Setter Property="Height" Value="40"/>
      <Setter Property="CornerRadius" Value="20"/>
      <Setter Property="Margin" Value="0,0,12,0"/>
      <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style Selector="Border.icon-container.contract">
      <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"/>
    </Style>

    <Style Selector="Border.icon-container.injury">
      <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
    </Style>

    <Style Selector="Border.icon-container.scout">
      <Setter Property="Background" Value="{StaticResource AccentGreenBrush}"/>
    </Style>

    <Style Selector="Border.icon-container.progress">
      <Setter Property="Background" Value="{StaticResource AccentOrangeBrush}"/>
    </Style>

    <Style Selector="Border.icon-container.finance">
      <Setter Property="Background" Value="{StaticResource BrandSecondaryBrush}"/>
    </Style>

    <Style Selector="Border.icon-container.alert">
      <Setter Property="Background" Value="{StaticResource AccentOrangeBrush}"/>
    </Style>

    <Style Selector="TextBlock.icon">
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.news-title">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
      <Setter Property="TextWrapping" Value="NoWrap"/>
      <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style Selector="TextBlock.news-message">
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
      <Setter Property="TextWrapping" Value="Wrap"/>
      <Setter Property="Margin" Value="0,4,0,0"/>
      <Setter Property="MaxHeight" Value="40"/>
    </Style>

    <Style Selector="TextBlock.news-timestamp">
      <Setter Property="FontSize" Value="11"/>
      <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
      <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <Style Selector="Border.unread-badge">
      <Setter Property="Width" Value="8"/>
      <Setter Property="Height" Value="8"/>
      <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"/>
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="VerticalAlignment" Value="Top"/>
      <Setter Property="Margin" Value="8,0,0,0"/>
    </Style>

    <Style Selector="Button.action-button">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="6"/>
      <Setter Property="Margin" Value="2,0"/>
      <Setter Property="VerticalAlignment" Value="Top"/>
      <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style Selector="Button.action-button:pointerover">
      <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
  </UserControl.Styles>

  <Border Classes="news-card"
          Classes.unread="{Binding IsUnread}">
    <Grid ColumnDefinitions="Auto,*,Auto">
      <!-- Icon -->
      <Border Grid.Column="0"
              Classes="icon-container"
              Classes.contract="{Binding IsContractType}"
              Classes.injury="{Binding IsInjuryType}"
              Classes.scout="{Binding IsScoutType}"
              Classes.progress="{Binding IsProgressType}"
              Classes.finance="{Binding IsFinanceType}"
              Classes.alert="{Binding IsAlertType}">
        <TextBlock Classes="icon"
                   Text="{Binding IconText}"/>
      </Border>

      <!-- Content -->
      <StackPanel Grid.Column="1">
        <DockPanel>
          <TextBlock Classes="news-title"
                     Text="{Binding Title}"/>
          <Border Classes="unread-badge"
                  IsVisible="{Binding IsUnread}"/>
        </DockPanel>
        <TextBlock Classes="news-message"
                   Text="{Binding Message}"/>
        <TextBlock Classes="news-timestamp"
                   Text="{Binding TimestampText}"/>
      </StackPanel>

      <!-- Actions -->
      <StackPanel Grid.Column="2"
                  Orientation="Horizontal"
                  Spacing="4">
        <Button Classes="action-button"
                Content="âœ“"
                ToolTip.Tip="Marquer comme lu"
                Command="{Binding MarkAsReadCommand}"
                IsVisible="{Binding IsUnread}"/>
        <Button Classes="action-button"
                Content="ðŸ“¦"
                ToolTip.Tip="Archiver"
                Command="{Binding ArchiveCommand}"/>
        <Button Classes="action-button"
                Content="ðŸ—‘"
                ToolTip.Tip="Supprimer"
                Command="{Binding DeleteCommand}"/>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
