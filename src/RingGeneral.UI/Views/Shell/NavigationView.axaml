<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RingGeneral.UI.ViewModels.Core"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="600"
             x:Class="RingGeneral.UI.Views.Shell.NavigationView"
             x:DataType="vm:ShellViewModel">

  <Design.DataContext>
    <vm:ShellViewModel />
  </Design.DataContext>

  <TreeView ItemsSource="{Binding NavigationItems}"
            SelectedItem="{Binding SelectedNavigationItem, Mode=TwoWay}"
            Background="Transparent"
            BorderThickness="0">
    <TreeView.ItemTemplate>
      <TreeDataTemplate ItemsSource="{Binding Children}">
        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,2">
          <TextBlock Text="{Binding Icon}" FontSize="14" VerticalAlignment="Center"/>
          <TextBlock Text="{Binding Label}" FontSize="13" VerticalAlignment="Center" Foreground="#e0e0e0"/>
          <TextBlock Text="{Binding Badge}"
                     FontSize="11"
                     Foreground="#10b981"
                     FontWeight="Bold"
                     IsVisible="{Binding Badge, Converter={StaticResource IsNotNullConverter}}"
                     VerticalAlignment="Center"/>
        </StackPanel>
      </TreeDataTemplate>
    </TreeView.ItemTemplate>
  </TreeView>

</UserControl>